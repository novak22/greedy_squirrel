{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "ignorePatterns": ["dist", "node_modules"],
  "overrides": [
    {
      "files": ["tests/**/*.js", "**/*.config.js"],
      "env": {
        "node": true
      }
    }
  ]
}
