{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "noEmit": false,
    "outDir": "dist",
    "rootDir": ".",
    "lib": ["ES2022", "DOM"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true
  },
  "include": ["src/**/*", "SlotMachineEngine/src/**/*", "game.ts"],
  "exclude": ["dist", "node_modules"]
}
