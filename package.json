{
    "name": "greedy_squirrel",
    "version": "1.0.0",
    "description": "Greedy Squirrel slot machine web game",
    "type": "module",
    "private": true,
    "scripts": {
        "build": "esbuild game.ts --bundle --minify --outfile=dist/game.js --format=esm --sourcemap",
        "dev": "esbuild game.ts --bundle --outfile=dist/game.js --format=esm --sourcemap --watch",
        "typecheck": "tsc -p tsconfig.json --noEmit",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier . --check",
        "format:write": "prettier . --write",
        "test": "node --test tests/paylineEvaluator.node.test.js tests/rng.node.test.js tests/stateManager.node.test.js"
    },
    "devDependencies": {
        "esbuild": "^0.27.0",
        "eslint": "^8.57.0",
        "prettier": "^3.3.3",
        "typescript": "^5.6.3"
    }
}
